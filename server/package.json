{
  "name": "@dungeon-delvers/server",
  "repository": "https://github.com/dungeon_delvers/Dungeon_Delvers",
  "version": "0.0.1",
  "description": "The Node backend server for Dungeon Delvers",
  "main": "server.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "clean": "rm -rf dist/** node_modules",
    "start": "tsx ./src/app.ts -- --watch",
    "test": "jest --config ./jest.config.js --passWithNoTests"
  },
  "keywords": [
    "Node",
    "Game",
    "Server",
    "Typescript",
    "Socket.io"
  ],
  "author": "Shawn Mealey",
  "license": "ISC",
  "dependencies": {
    "@dungeon-delvers/config": "0.0.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/pg": "^8.11.8",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.12.0",
    "socket.io": "^4.7.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.4.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "ext": "ts, js"
  }
}
